<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >


    <ImageView
        android:id="@+id/image_jobs"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/jobs1"
        />

    <ImageView
        android:id="@+id/image_training"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/jobs1"
        android:layout_alignParentRight="true"
        />

    <Button
        android:id="@+id/bt_jobs"
        android:textColor="@color/white"
        android:background="@drawable/but_background"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:text="Jobs"
        android:layout_below="@+id/image_jobs"/>
    <Button
        android:id="@+id/bt_training"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:textColor="@color/white"
        android:background="@drawable/but_background"
        android:layout_alignParentRight="true"
        android:text="Training"
        android:layout_below="@id/image_training"/>

</RelativeLayout>


</LinearLayout>